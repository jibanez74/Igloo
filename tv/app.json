{
  "expo": {
    "scheme": "routertv",
    "plugins": [
      [
        "@react-native-tvos/config-tv",
        {
          "androidTVBanner": "./assets/tv_icons/icon-400x240.png",
          "appleTVImages": {
            "icon": "./assets/tv_icons/icon-1280x768.png",
            "iconSmall": "./assets/tv_icons/icon-400x240.png",
            "iconSmall2x": "./assets/tv_icons/icon-800x480.png",
            "topShelf": "./assets/tv_icons/icon-1920x720.png",
            "topShelf2x": "./assets/tv_icons/icon-3840x1440.png",
            "topShelfWide": "./assets/tv_icons/icon-2320x720.png",
            "topShelfWide2x": "./assets/tv_icons/icon-4640x1440.png"
          }
        }
      ],
      "expo-router",
      "expo-font",
      [
        "react-native-video",
        {
          "enableNotificationControls": false,
          "enableBackgroundAudio": false,
          "androidExtensions": {
            "useExoplayerRtsp": false,
            "useExoplayerSmoothStreaming": false,
            "useExoplayerHls": true,
            "useExoplayerDash": false,
            "useExoplayerCache": true,
            "useExoplayerCodecs": true,
            "useExoplayerFfmpeg": true,
            "useExoplayerMediaSession": true,
            "useExoplayerIma": false
          },
          "enableAudioTrackSelection": true,
          "enableSubtitleSelection": true,
          "enableQualitySelection": true,
          "enableTvMode": true
        }
      ]
    ],
    "android": {
      "splash": {
        "image": "./assets/images/splash.png"
      },
      "permissions": [],
      "package": "com.blindpenguincoder.igloo"
    },
    "ios": {
      "splash": {
        "image": "./assets/images/splash.png"
      }
    },
    "experiments": {
      "typedRoutes": true
    },
    "newArchEnabled": true,
    "name": "Igloo",
    "slug": "Igloo",
    "extra": {
      "EXPO_PUBLIC_API_URL": "https://swifty.hare-crocodile.ts.net/api/v1"
    }
  }
}
